<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:padding="16dp">

    <EditText
        android:id="@+id/groceryEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_white_bordered_primary_light"
        android:hint="Agregue su Alimento Al Carrito"
        android:maxLines="1"
        android:padding="8dp"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/saveBtn"
        android:layout_width="34dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_accent"
        android:src="@mipmap/ic_shopping_cart_white_24dp" />

</LinearLayout>